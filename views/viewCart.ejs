<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')%>

    <body>
        <%- include('./partials/navbar')%>
            <% for(let i=0 ; i<data.length ; i++){%>
                <div class="card col-12 col-md-3 shadow border bg-success bg-opacity-50">
                    <img class="card-img-top my-3 border shadow" src="/img/publications/<%=data[i].product_image%>"
                        style="width: 40vh; margin: auto;" alt="Card image cap">
                    <div class="card-body">
                        <strong class="card-title">Rs. <%= data[i].product_price%></strong>
                        <p class="card-text">
                            <%= data[i].product_name%>
                        </p>
                        <a href="products" class="btn btn-primary" onclick="addToCart('<%= data[i].product_id%>')">Add
                            to Cart</a>
                    </div>
                </div>
                <% }%>
                    <%- include('./partials/footer')%>
                        <%- include('partials/scripts')%>
    </body>

</html>